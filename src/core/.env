# ================================================================================
# PLANTILLA DE CONFIGURACIÓN - Detección de Enfermedades del Maíz
# ================================================================================
# Copia este archivo a .env y ajusta los valores según tus necesidades.
# Comando: cp src/core/.env.example src/core/.env

# ================================================================================
# CONFIGURACIÓN DE IMAGEN
# ================================================================================
IMAGE_SIZE=[224, 224]
NUM_CLASSES=4
CLASS_NAMES=["Blight", "Common_Rust", "Gray_Leaf_Spot", "Healthy"]

# ================================================================================
# DIVISIÓN DE DATOS
# ================================================================================
SPLIT_RATIOS=[0.7, 0.15, 0.15]
DATASETS_CONSIDERATION=["no-augmentation", "augmented"]

# ================================================================================
# DETECCIÓN DE SIMILITUD (De-Augmentación)
# ================================================================================
IM_SIM_THRESHOLD=0.95
MAX_ADDED_BALANCE=50

# Modelo de embedding para detección de duplicados
# Opciones: ResNet50 (recomendado), VGG16, MobileNetV2
EMBEDDING_MODEL=ResNet50
EMBEDDING_WEIGHTS=imagenet
EMBEDDING_INCLUDE_TOP=False
EMBEDDING_POOLING=avg

# Subdirectorios para datos raw (relativo a la raíz del proyecto)
DATA_RAW_SUBDIRS=["data", "raw"]

# ================================================================================
# CONFIGURACIÓN DE ENTRENAMIENTO
# ================================================================================
BATCH_SIZE=32
MAX_EPOCHS=20

# ================================================================================
# KERAS TUNER - BÚSQUEDA DE HIPERPARÁMETROS
# ================================================================================
MAX_TRIALS=10
TUNER_EPOCHS=10
FACTOR=3

# ================================================================================
# CONFIGURACIÓN DEL MODELO
# ================================================================================
# Opciones: VGG16 (recomendado), ResNet50, YOLO (requiere pip install ultralytics)
BACKBONE=VGG16
BALANCE_STRATEGY=oversample

# ================================================================================
# LOGGING Y MLFLOW
# ================================================================================
MLFLOW_EXPERIMENT_NAME=image_classification_experiment
LOG_LEVEL=INFO
LOG_TO_FILE=False

# ================================================================================
# REPRODUCIBILIDAD
# ================================================================================
RANDOM_SEED=42
