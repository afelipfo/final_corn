# Environment configuration example for corn-diseases-detection
# Copy this file as .env and modify values according to your needs

# === IMAGE CONFIGURATION ===
# Input image size (width, height)
IMAGE_SIZE=(224, 224)

# Number of classes to classify
NUM_CLASSES=4

# Class names (must match folder names in data/)
CLASS_NAMES=['Blight', 'Common_Rust', 'Gray_Leaf_Spot', 'Healthy']

# === DATA SPLIT CONFIGURATION ===
# Split ratios for train/val/test (must sum to 1.0)
SPLIT_RATIOS=(0.7, 0.15, 0.15)

# === BALANCING CONFIGURATION ===
# Maximum number of images to add when balancing classes
MAX_ADDED_BALANCE=50

# === TRAINING CONFIGURATION ===
# Training batch size
BATCH_SIZE=32

# Maximum number of epochs
MAX_EPOCHS=30

# Initial learning rate
LEARNING_RATE=0.001

# Dropout rate
DROPOUT_RATE=0.3

# === TUNER CONFIGURATION (Keras Tuner) ===
# Maximum number of trials for hyperparameter search
MAX_TRIALS=10

# Epochs per trial
TUNER_EPOCHS=10

# Factor for learning rate reduction in callbacks
FACTOR=3

# === DATASETS CONFIGURATION ===
# Datasets to consider for analysis
DATASETS_CONSIDERATION=['no-augmentation', 'augmented']

# === SIMILARITY CONFIGURATION ===
# Similarity threshold for duplicate image filtering
IM_SIM_THRESHOLD=0.95

# === PROJECT CONFIGURATION ===
# Project version
PROJECT_VERSION=0.1.0

# Project name
PROJECT_NAME=corn-diseases-detection

# === MODEL CONFIGURATION ===
# Default backbone
BACKBONE=MobileNetV3Large

# === EXPERIMENTS CONFIGURATION ===
# Default experiment name for MLflow
EXPERIMENT_NAME=edge_models_comparison
